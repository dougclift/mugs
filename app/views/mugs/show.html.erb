<div class="jumbotron">
  <div class="row">
    <div class="col-xs-6 col-md-4">
      <p>
        <strong>First name:</strong>
      <%= @mug.first_name %>
      </p>

      <p>
        <strong>Middle name:</strong>
        <%= @mug.middle_name %>
      </p>

      <p>
        <strong>Last name:</strong>
        <%= @mug.last_name %>
      </p>

      <p>
        <strong>Agency:</strong>
        <%= @mug.agency %>
      </p>

      <p>
        <strong>Slug:</strong>
        <%= @mug.slug %>
      </p>

      <p>
        <strong>Birthdate:</strong>
        <%= @mug.birthdate %>
      </p>

      <p>
        <strong>Notes:</strong>
        <%= @mug.notes %>
      </p>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-8">
      <div class="mugbox">
       <%= image_tag @mug.image.url(:medium) %>
      </div>
    </div>
  </div>
  <%= link_to 'Edit', edit_mug_path(@mug) %> |
  <%= link_to 'Back', mugs_path %>
</div>
